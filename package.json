import express from "express";

const app = express();
app.use(express.json());

const REQUIRED_SECRET = process.env.X_TOOL_SECRET;

app.post("/retell/tool", (req, res) => {
  const secret = req.headers["x-tool-secret"];
  if (!REQUIRED_SECRET || secret !== REQUIRED_SECRET) {
    return res.status(403).json({ error: "Forbidden: Invalid or missing secret" });
  }

  // Hier deine Tool-Logik
  res.json({ result: "Tool request accepted" });
});

app.listen(process.env.PORT || 3000, () => {
  console.log("âœ… Agent backend running");
});

